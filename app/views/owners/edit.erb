<h1>Update Owner</h1>

<form action="/owners/:id" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="owner[name]" value="<%= @owner.name %>">

  <h3>Existing Pets</h3>
  <% @owner.pets.each do |pet| %>
    <input type="text" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.name %>"><br>
  <% end %>
    <input type="text" name="pet[name]" />
  <br>

  <input type="submit" value="Edit Owner"/>
</form>

